<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Hello.Chapter13BitMaps"
             x:Class="Hello.Chapter13BitMaps.StackedBitMapPage">

  <StackLayout>
    
    <Label Text="320 x 240 Pixel Bitmap"
          FontSize="Medium"
          VerticalOptions="CenterAndExpand"
          HorizontalOptions="Center" />

    <Image Source="{local:ImageResource Hello.Chapter13BitMaps.Images.join.png}"
      
            BackgroundColor="#E7623C"
            SizeChanged="OnImageSizeChanged" />
    
    <Label x:Name="label"
            FontSize="Medium"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center" />
    
  </StackLayout>
  
</ContentPage>